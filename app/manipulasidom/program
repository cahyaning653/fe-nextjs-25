    <div class="container">
        <h1>üìö Tugas DOM Manipulation</h1>

        <!-- Section 1: Dynamic List -->
        <div class="section">
            <h2>1. Dynamic List (Daftar Dinamis)</h2>
            <div class="input-group">
                <input type="text" id="itemInput" placeholder="Masukkan item baru...">
                <button class="btn-primary" onclick="tambahItem()">Tambah Item</button>
            </div>
            <ul id="itemList"></ul>
        </div>

        <!-- Section 2: Ubah Warna Background -->
        <div class="section">
            <h2>2. Ubah Warna Background</h2>
            <div class="btn-group">
                <button class="btn-red" onclick="ubahWarna('red')">üî¥ Merah</button>
                <button class="btn-green" onclick="ubahWarna('green')">üü¢ Hijau</button>
                <button class="btn-blue" onclick="ubahWarna('blue')">üîµ Biru</button>
                <button class="btn-primary" onclick="ubahWarna('#f5f5f5')">‚Ü©Ô∏è Reset</button>
            </div>
        </div>

        <!-- Section 3: Counter -->
        <div class="section">
            <h2>3. Counter dengan DOM Manipulation</h2>
            <div class="counter-display" id="counterDisplay">0</div>
            <div class="counter-buttons">
                <button class="btn-counter" onclick="tambahCounter()">+</button>
                <button class="btn-counter" onclick="kurangiCounter()">-</button>
                <button class="btn-reset" onclick="resetCounter()">Reset</button>
            </div>
        </div>

        <!-- Section 4: Toggle Show/Hide -->
        <div class="section">
            <h2>4. Toggle Show/Hide Element</h2>
            <button class="btn-toggle" onclick="toggleElement()">üëÅÔ∏è Tampilkan / Sembunyikan</button>
            <p id="toggleText" class="hidden">
                Ini adalah teks yang dapat ditampilkan atau disembunyikan menggunakan DOM Manipulation. 
                Fitur ini menggunakan classList.toggle() untuk menambah atau menghapus class 'hidden' 
                pada elemen paragraf ini. DOM (Document Object Model) adalah representasi struktur 
                dokumen HTML yang memungkinkan JavaScript untuk memanipulasi konten, struktur, dan 
                style dari halaman web secara dinamis.
            </p>
        </div>
    </div>

    <script>
        // ========== SECTION 1: DYNAMIC LIST ==========
        function tambahItem() {
            const input = document.getElementById('itemInput');
            const itemText = input.value.trim();
            
            if (itemText === '') {
                alert('Silakan masukkan item terlebih dahulu!');
                return;
            }
            
            // Membuat elemen li baru
            const li = document.createElement('li');
            
            // Membuat span untuk teks
            const span = document.createElement('span');
            span.textContent = itemText;
            
            // Membuat tombol hapus
            const btnHapus = document.createElement('button');
            btnHapus.textContent = 'Hapus';
            btnHapus.className = 'btn-danger';
            btnHapus.onclick = function() {
                li.remove();
            };
            
            // Menambahkan span dan button ke li
            li.appendChild(span);
            li.appendChild(btnHapus);
            
            // Menambahkan li ke ul
            const ul = document.getElementById('itemList');
            ul.appendChild(li);
            
            // Mengosongkan input
            input.value = '';
            input.focus();
        }

        // Event listener untuk Enter key
        document.getElementById('itemInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                tambahItem();
            }
        });

        // ========== SECTION 2: UBAH WARNA BACKGROUND ==========
        function ubahWarna(warna) {
            document.body.style.backgroundColor = warna;
        }

        // ========== SECTION 3: COUNTER ==========
        let counter = 0;

        function updateCounterDisplay() {
            document.getElementById('counterDisplay').textContent = counter;
        }

        function tambahCounter() {
            counter++;
            updateCounterDisplay();
        }

        function kurangiCounter() {
            counter--;
            updateCounterDisplay();
        }

        function resetCounter() {
            counter = 0;
            updateCounterDisplay();
        }

        // ========== SECTION 4: TOGGLE SHOW/HIDE ==========
        function toggleElement() {
            const element = document.getElementById('toggleText');
            element.classList.toggle('hidden');
        }
    </script>
